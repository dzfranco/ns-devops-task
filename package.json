		"iridium": "7.2.5",
		"jsonwebtoken": "8.3.0",
		"lodash": "4.17.11",
		"mongo-seeding": "^3.0.0",
		"mongodb-memory-server": "^2.7.2",
		"mongoose": "^5.3.14",
		"node-fetch": "2.2.0",
		"pino": "5.8.0",
