{
	"name": "heyfinance-api",
	"version": "1.0.0",
	"description": "Starter project for heyfinance",
	"main": "index.js",
	"scripts": {
		"start": "node build/main",
		"start:docker": "node main",
		"heroku-postbuild": "npm run compile",
		"compile": "cross-env NODE_ENV=production node build.js && NODE_ENV=production backpack build",
		"compile-native:stg": "cross-env NODE_ENV=staging node build.js && tsc",
		"compile-native:prod": "cross-env NODE_ENV=production node build.js && tsc",
		"compile:stg": "cross-env NODE_ENV=staging node build.js && NODE_ENV=staging backpack build",
		"compile:dev": "cross-env NODE_ENV=development node build.js && NODE_ENV=development backpack build",
		"dev": "yarn && cross-env NODE_ENV=development node build.js && NODE_ENV=development backpack dev --inspect=0.0.0.0:5858",
		"dev:debug": "cross-env NODE_ENV=development node build.js && cross-env DEBUG=express:* backpack dev",
		"dash": "nodejs-dashboard -- node -r nodejs-dashboard build/main",
		"test": "cross-env NODE_ENV=test node build.js && npm run lint && jest --no-cache --maxWorkers=4 --forceExit --config unit.config.json",
		"test:dev": "cross-env NODE_ENV=test node build.js && jest --forceExit --config unit.config.json --detectOpenHandles",
		"lint": "npm run tslint -- -o reports/lint_issues.json -t json --force \"server/**/*.ts\" ",
		"lint:console": "npm run tslint -- --force \"server/**/*.ts\" ",
		"tslint": "tslint",
		"wait-port": "wait-port",
		"sonar-scanner": "sonar-scanner",
		"stg": "yarn && cross-env NODE_ENV=staging node build.js && backpack dev --inspect=0.0.0.0:5858",
		"itest:build": "cross-env NODE_ENV=test node build.js && cross-env NODE_ENV=test backpack build",
		"itest:run": "concurrently --kill-others --success first \"cd build && node main\" \"wait-port localhost:3000 && jest --forceExit --config itest.config.json\"",
		"prettier:base": "prettier --parser typescript --single-quote",
		"prettier:check": "npm run prettier:base -- --list-different \"server/**/*.{ts,tsx}\"",
		"prettier:write": "npm run prettier:base -- --write \"server/**/*.{ts,tsx}\""
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"jsx",
			"json",
			"ts",
			"tsx"
		],
		"testResultsProcessor": "jest-sonar-reporter",
		"transform": {
			"^.+\\.(ts|tsx)$": "ts-jest"
		},
		"testMatch": [
			"**/server/**/*.spec.(ts)"
		],
		"testEnvironment": "node",
		"collectCoverage": true,
		"coverageReporters": [
			"lcov"
		],
		"coverageDirectory": "coverage",
		"collectCoverageFrom": [
			"**/server/**/*.{ts}",
			"!**/node_modules/**",
			"!**/build/**"
		]
	},
	"jestSonar": {
		"reportPath": "reports",
		"reportFile": "test-reporter.xml",
		"indent": 4,
		"sonar56x": true
	},
	"dependencies": {
		"@types/mongodb-memory-server": "^1.8.0",
		"@types/mongoose": "^5.3.2",
		"aws-sdk": "^2.374.0",
		"bluebird": "3.5.2",
		"body-parser": "1.18.3",
		"brakes": "2.6.0",
		"casual": "1.5.19",
