		"csurf": "1.9.0",
		"dataloader": "1.4.0",
		"date-fns": "^1.29.0",
		"date-fns-timezone": "^0.1.4",
		"dateformat": "3.0.3",
		"dotenv": "6.1.0",
		"express": "4.16.4",
		"express-jwt": "5.3.1",
		"express-partial-response": "0.3.4",
		"express-physical": "0.5.2",
		"faker": "4.1.0",
		"graphql": "14.0.2",
		"graphql-import": "0.7.1",
		"graphql-request": "1.8.2",
		"graphql-upload": "^8.0.2",
		"helmet": "3.14.0",
		"inversify": "5.0.1",
